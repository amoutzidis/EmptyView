<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EmptyView" parent="android:Widget">
        <item name="titleStyle">@style/EmptyTitleStyle</item>
        <item name="descriptionStyle">@style/EmptyDescriptionStyle</item>
        <item name="buttonStyle">@style/EmptyButtonStyle</item>
    </style>

    <style name="EmptyTitleStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#837F7F</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EmptyDescriptionStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#837F7F</item>
        <item name="android:textSize">18sp</item>
<!--        <item name="android:textStyle">italic</item>-->
    </style>

    <style name="EmptyButtonStyle" parent="android:Widget.TextView">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>